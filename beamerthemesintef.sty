% Define backmatter
\newcommand{\backmatter}[1][]{
\begingroup
  \themecolor{main}
  \begin{frame}[c]
    \centering
    \begin{minipage}{\textwidth}
      \usebeamercolor[fg]{normal text}
      \centering
      \ifstrequal{#1}{notitle}{}{
        \Huge \inserttitle
        \vspace{10mm}
      }
      \Large \textsl{\\ Thank you for listening!}
    \end{minipage}
  \end{frame}
\endgroup
}
